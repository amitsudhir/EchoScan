<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base App Theme -->
    <style name="Theme.QRScannerTTS" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:statusBarColor" tools:targetApi="l">#000000</item> <!-- Black status bar -->
    </style>

    <!-- NoActionBar Theme for Splash Screen -->
    <style name="Theme.QRScannerTTS.NoActionBar" parent="Theme.QRScannerTTS">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

</resources>
